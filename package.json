{
  "name": "label",
  "displayName": "Label",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "commands": [
        {
          "command": "label.collectData",
          "title": "Collect Data"
        },
        {
          "command": "label.savePaths",
          "title": "Salva percorsi"
        },
        {
          "command": "formTreeView.addEntry",
          "title": "Aggiungi Voce"
      },
      {
        "command": "label.showForm",
        "title": "Mostra Form"
      }
      ],
      "keybindings": [
        {
          "command": "label.collectData",
          "key": "shift+alt+l"
        },
        {
          "command": "label.savePaths",
          "key": "shift+alt+s"
        },
        {
          "command": "label.modify",
          "key": "shift+alt+am"
        },
        {
          "command": "label.showForm",
          "key": "shift+alt+f"
        }
      ],
      
    "viewsContainers": {
      "activitybar": [
          {
              "id": "formTreeView",
              "title": "BaNaNa Label Generator",
              "icon": "/src/fruit.png"
          }
      ]
  },
  "views": {
      "formTreeView": [
          {
              "id": "formTreeView",
              "name": "Form Tree View"
          }
      ]
  }
      
    },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "xml2js": "^0.6.2",
    "xmlbuilder2": "^3.1.1"
  }
}